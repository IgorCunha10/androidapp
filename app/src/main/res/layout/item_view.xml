<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/purple_200">

    <!-- CONTAINER PRINCIPAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/mainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- DESCRIÇÃO -->
        <TextView
            android:id="@+id/taskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descrição da tarefa"
            android:textSize="14sp"
            android:textColor="#666666" />

        <!-- INFO CHIPS (QUEBRA AUTOMÁTICA) -->
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:alignItems="center">

            <TextView
                android:id="@+id/taskData"
                style="@style/TaskChip"
                android:text="02/02/2026" />

            <TextView
                android:id="@+id/taskPriority"
                style="@style/TaskChip"
                android:text="Alta" />

            <TextView
                android:id="@+id/taskState"
                style="@style/TaskChip"
                android:text="Pendente" />

            <TextView
                android:id="@+id/taskCategory"
                style="@style/TaskChip"
                android:text="Categoria Muito Longa Exemplo" />

        </com.google.android.flexbox.FlexboxLayout>


        <!-- AÇÕES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"
                app:srcCompat="@android:drawable/ic_menu_edit"
                app:tint="@color/purple_500" />

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Excluir"
                app:srcCompat="@drawable/ic_delete"
                app:tint="@color/design_default_color_error" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
